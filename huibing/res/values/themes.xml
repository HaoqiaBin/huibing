<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="vAPPTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar"> 	 
		<item name="@android:windowAnimationStyle">@style/AnimationActivity</item>
	</style>
	
	<style name="AnimationActivity" parent="@android:style/Animation.Activity">
		<item name="@android:activityOpenEnterAnimation">@anim/wallpaper_open_enter</item>
		<item name="@android:activityOpenExitAnimation">@anim/wallpaper_open_exit</item>
		<item name="@android:activityCloseEnterAnimation">@anim/wallpaper_open_enter</item>
		<item name="@android:activityCloseExitAnimation">@anim/wallpaper_open_exit</item>
	</style>

	<style name="dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item> <!-- 边框 -->
		<item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
		<item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
		<item name="android:windowNoTitle">true</item> <!-- 无标题 -->
		<item name="android:windowBackground">@android:color/transparent</item> <!-- 自己想要的背景 -->
	
		<item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
	</style>
</resources>
